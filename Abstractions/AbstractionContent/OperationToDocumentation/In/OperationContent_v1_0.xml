<?xml version="1.0" encoding="UTF-8"?>
<OperationAbstraction xmlns="http://tempuri.org/Operation_v1_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://tempuri.org/Operation_v1_0.xsd ../../../OperationABS/Operation/Content_v1_0/Operation_v1_0.xsd">
	<Operations codeNamespace="Demo.Operations">
    <!-- Example "boxing" for audio engine - HOW -->
    <Operation name="GetPlayingPosition">
      <OperationSpec>
        <Description>
          Get engine playing position.
        </Description>
      </OperationSpec>
      <Parameters>
        <Parameter dataType="Engine" designDesc="The active engine instance" name="engine" state="implemented"/>
        <Validation designDesc="Validate engine is not null" name="EngineNotNull" state="implemented">
          <Target name="engine"/>
        </Validation>
      </Parameters>
      <Execution>
        <SequentialExecution>
          <MethodExecute designDesc="Get the low level playing position" name="GetPlayingPositionFromPlatform" state="implemented">
            <Parameter name="engine"/>
            <ReturnValue dataType="int" designDesc="Actual playing position" name="PlayingPosition" state="implemented"/>
          </MethodExecute>
        </SequentialExecution>
      </Execution>
      <OperationReturnValues>
        <ReturnValue dataType="int" designDesc="Playing position result" name="PlayingPosition" state="implemented"/>
      </OperationReturnValues>
    </Operation>
  </Operations>
</OperationAbstraction>
